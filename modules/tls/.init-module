#!/bin/bash

execdir="$(pushd `dirname $0` >/dev/null ; pwd ; popd >/dev/null)"
bindir="${execdir}/bin"

cat >>${HOME}/.bashrc <<EOF
#
# Rootaid
#
PATH=${bindir}:\$PATH
export PATH
EOF

has_sudo_right "ALL|a2enmod"
if [ x$? = xtrue ]
then
    sudo a2enmod ssl
    sudo a2enmod headers
    sudo a2enmod macro
fi

exit 0
