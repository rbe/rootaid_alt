#!/bin/bash

execdir="$(pushd `dirname $0` >/dev/null ; pwd ; popd >/dev/null)"
bindir="${execdir}/bin"
rootaid="$(pushd ${execdir}/../.. >/dev/null ; pwd ; popd >/dev/null)"

. ${rootaid}/bin/libsh

bin_avail curl unzip zip

echo "Installing sdkman.io"
curl -s "https://get.sdkman.io" | bash

echo "Adding bin to PATH"
echo >>${HOME}/.bashrc <<EOF
#
# Rootaid - Module java
#
PATH=${bindir}:\$PATH
export PATH
EOF

exit 0
