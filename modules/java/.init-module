#!/bin/bash

execdir="$(pushd `dirname $0` >/dev/null ; pwd ; popd >/dev/null)"
bindir="${execdir}/bin"

echo "Installing sdkman.io"
if [ -x /usr/bin/curl -a -x /usr/bin/unzip ]
then
    curl -s "https://get.sdkman.io" | bash
else
    echo "Could not find curl or unzip"
    exit 1
fi

echo "Adding bin to PATH"
echo >>${HOME}/.bashrc <<EOF
#
# Rootaid - Module java
#
PATH=${bindir}:\$PATH
export PATH
EOF

exit 0
