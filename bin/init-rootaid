#!/bin/bash

set -o nounset

if [ $# -neq 1 ]
then
    echo "usage: $0 <username>"
    exit 1
elif [ $# -eq 1 ]
then
    user=$1
    home=$(getent passwd ${user} | cut -d: -f6)
    sudo cat >>${home}/.bashrc <<EOF

# Rootaid
PATH=${ROOTAID_HOME}/${ROOTAID_REPO_NAME}/bin:\$PATH
export PATH
EOF
fi

exit 0
