#!/bin/bash
#
# Copyright (C) 2017 art of coding UG, https://www.art-of-coding.eu
#

e() {
    echo "$(basename $0): $*"
}

myexit() {
    local ev=$1
    shift
    local msg=$*
    if [ ${ev} -gt 0 ]
    then
        [ -z "${msg}" ] && e "Exit value ${ev}, exiting" || e ${msg}
        exit ${ev}
    fi
}

bin_avail() {
    local notfound=false
    for b in $*
    do
        x=$(which ${b})
        if [ ! -x "${x}" ]
        then
            echo "Cannot find ${b}"
            notfound=true
        fi
    done
    if [ x${notfound} = xtrue ]
    then
        exit 1
    fi
}

check_osrelease() {
    if [ -f /etc/os-release ]
    then
        . /etc/os-release
    else
        e "Debian(-based) only: /etc/os-release not found"
        exit 1
    fi
}

has_sudo_right() {
    if [ $(sudo -l | egrep -c ".*NOPASSWD:.*ALL|a2enmod") -ge 1 ]
    then
        return 1
    else
        return 0
    fi
}
