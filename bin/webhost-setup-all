#!/bin/bash

set -o nounset
BASE="$(dirname `pwd $0`)"

${BASE}/language.sh
${BASE}/timezone.sh
apt-get update
${BASE}/install-system-tools.sh
${BASE}/install-openssl.sh
${BASE}/install-mysql.sh
${BASE}/install-apache2.sh
${BASE}/install-apache2-php5.sh
${BASE}/install-apache2-modpagespeed.sh

$BASE/setup-rootaid.sh

exit 0
